<uwsgi>
    	<plugin>python</plugin> 
        <socket>/tmp/galileo.socket</socket>
        <chmod-socket>777</chmod-socket>
        <pythonpath>/root/wechat/galileo</pythonpath>
        <pythonpath>/root/wechat</pythonpath>
<!--        <app mountpoint="/">
                <script>wechat.wsgi</script>
        </app>   -->
        <module>wechat.wsgi</module>
        <master>true</master>
        <processes>1</processes>
        <enable-threads>true</enable-threads>
        <logdate>true</logdate>
        <harakiri>60</harakiri>
        <reload-mercy>8</reload-mercy>
        <max-requests>200</max-requests>
        <limit-as>512</limit-as>
        <reload-on-as>256</reload-on-as>
        <reload-on-rss>192</reload-on-rss>
        <vacuum/>
        <daemonize>/var/log/uwsgi.log</daemonize>
</uwsgi>
